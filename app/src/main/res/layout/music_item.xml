<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:padding="12dp"
    android:background="@drawable/music_item_background"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/music_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_tab_music"
        android:contentDescription="@string/tab_music"
        android:padding="4dp"
        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/music_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/music_icon"
        app:layout_constraintEnd_toStartOf="@id/music_duration"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="音乐标题" />

    <TextView
        android:id="@+id/music_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/colorTextSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/music_icon"
        app:layout_constraintEnd_toStartOf="@id/music_duration"
        app:layout_constraintTop_toBottomOf="@id/music_title"
        tools:text="艺术家" />

    <TextView
        android:id="@+id/music_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorTextSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="3:45" />

</androidx.constraintlayout.widget.ConstraintLayout>